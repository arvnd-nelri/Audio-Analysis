<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1976D2"/> <!-- Darker blue when pressed -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Default blue -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#1976D2"/> <!-- Border color -->
        </shape>
    </item>

</selector>
